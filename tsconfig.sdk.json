{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "sdk/dist",
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["sdk/**/*"]
}

